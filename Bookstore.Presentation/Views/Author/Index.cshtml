@model IList<AuthorViewModel>
@{
    ViewData["Title"] = "Authors";
}

<h1>Авторы</h1>
<div class="container">
    <div class="row align-content-center">
        @foreach (var author in Model)
        {
            <div class="col-md-6 rounded-3">
                <h3>@author.Name</h3>
                <details title="Развернуть">
                    <summary>Книги</summary>
                        @if (author.Books is not null && author.Books.Any())
                        {
                            foreach (var book in author.Books)
                            {
                                <p>
                                    <a asp-controller="Book" asp-action="GetBook" asp-route-bookid="@book.Id">@book.Title</a>
                                </p>
                            }
                        }
                   
                </details>
            </div>
        }
    </div>
</div>

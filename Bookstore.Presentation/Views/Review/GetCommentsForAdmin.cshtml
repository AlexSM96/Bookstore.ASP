@model IList<ReviewViewModel>

<h2>Комментарии</h2>
@if (Model is not null && Model.Any())
{
    <table class="table table-active table-hover" style="font-size:12px;">
        <thead>
            <tr>
                <th>Пользователь</th>
                <th>Книга</th>
                <th>Комментарий</th>
                <th>Дата создания</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var comment in Model)
            {
                <tr>
                    <td>
                        <p>Login:@comment.User?.Login</p>
                        <p>Email:@comment.User?.Email</p>
                    </td>
                    <td>
                        <a asp-action="GetBook" asp-controller="Book" asp-route-bookid="@comment.BookId">@comment.Book?.Title</a>
                    </td>
                    <td>
                        <text class="text-secondary">@comment.Text</text>
                    </td>
                    <td>
                        @comment.CreationDate.ToShortDateString()
                    </td>
                    <td>
                        <a asp-controller="Review" asp-action="DeleteComment" asp-route-reviewid="@comment.Id" class="text-decoration-none" title="Удалить" alt="Удалить">&#10060;</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Комментариев пока нет...</p>
}


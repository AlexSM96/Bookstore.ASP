@model IList<ReviewViewModel>

<h2>Комментарии</h2>
@if (Model is not null && Model.Any())
{
    <table class="table table-info table-hover">
        <thead>
            <tr>
                <th>Пользователь</th>
                <th>Книга</th>
                <th>Комментарий</th>
                <th>Дата создания</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var comment in Model)
            {
                <tr>
                    <td>
                        UserID:@comment.UserId
                        Login:@comment.User.Login
                        Email:@comment.User.Email
                    </td>
                    <td>
                        BookId:@comment.BookId
                    </td>
                    <td>
                        <textarea class="form-text" readonly="readonly" rows="4">@comment.Text</textarea>
                    </td>
                    <td>
                        @comment.CreationDate.ToShortDateString()
                    </td>
                    <td>
                        <a asp-controller="Review" asp-action="DeleteComment" asp-route-reviewid="@comment.Id" class="btn btn-outline-danger">x</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Комментариев пока нет...</p>
}


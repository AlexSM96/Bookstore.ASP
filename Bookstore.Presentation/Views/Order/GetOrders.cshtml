@model IList<OrderViewModel>

<h2>Заказы</h2>

<div>
    @if (Model.Any())
    {
        <ul class="list-group">
            @foreach (var order in Model)
            {
                <li class="list-group-item">
                    @foreach (var book in order.Books)
                    {
                        <div class="row container-fluid">
                            <div class="col-md-4">
                                <img src="~/img/@book.ImagePath" width="150" />
                            </div>
                            <div class="col-md-8" align="left">
                                <p>Номер заказа: @order.Id</p>
                                <p>Email клиента: @order.User.Email</p>
                                <p>ID книги: @book.Id</p>
                                <p>Дата создания: @order.CreationDate.ToShortDateString()</p>
                                <p>Название: @book.Title</p>
                                <p>Цена: @book.Price</p>
                            </div>
                        </div>
                    }
                </li>
            }
        </ul>
    }
    else
    {
        <p>Заказов пока нет...</p>
    }
</div>
